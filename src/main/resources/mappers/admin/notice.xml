<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.sjh.admin.vo.NoticeVO">

	<insert id="insertNotice" parameterType="com.sjh.admin.vo.NoticeVO">
		INSERT INTO tbl_notice(
				ntitle,ncontent,nwriter
			)values(
				#{ntitle},
				#{ncontent},
				'관리자'
			)
	</insert>
	
	<update id="updateNotice" parameterType="com.sjh.admin.vo.NoticeVO">
		UPDATE tbl_notice
			SET ntitle = #{ntitle},
				ncontent = #{ncontent}
			WHERE
				nno = #{nno} 
	</update>
	
	<select id="noticeList" resultType="com.sjh.admin.vo.NoticeVO">
		SELECT
			 nno,ntitle,ncontent,nwriter,nrdate,nviewcnt,nisdelete
		FROM 
			 tbl_notice
		WHERE
			nisdelete = 'N'
		ORDER BY nno DESC
	</select>
	
	<select id="noticeRead" parameterType="com.sjh.admin.vo.NoticeVO" resultType="com.sjh.admin.vo.NoticeVO">
		SELECT
			nno,ntitle,ncontent,nwriter,nrdate,nviewcnt,nisdelete
		FROM
			tbl_notice
		WHERE
			nno = #{nno} 
	</select>
	


</mapper>